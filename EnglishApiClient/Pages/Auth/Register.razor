@page "/register"


<div class="row justify-content-md-center">
    <div class="col-md-7 col-sm-12">
    <div class="col">
        <EditForm Model="_registerModel" OnValidSubmit="RegisterUser" class="card card-body bg-light">
            <DataAnnotationsValidator />
            <div class="form-group row">
                <div class="col-sm-12">
                    <label for="Username" class="form-label">Username</label>
                    <InputText id="name" class="form-control" @bind-Value="_registerModel.Username" />
                    <ValidationMessage For="@(() => _registerModel.Username)" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <label for="Email" class="form-label">Email</label>
                    <InputText Id="Email" type="email" class="form-control" @bind-Value="_registerModel.Email" />
                    <ValidationMessage For="@(() => _registerModel.Email)" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <label for="password" class="form-label">Password</label>
                    <InputText Id="password" type="password" Class="form-control" @bind-Value="_registerModel.Password" />
                    <ValidationMessage For="@(() => _registerModel.Password)" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <label for="conf-password" class="form-label">Confirm Password</label>
                    <InputText Id="conf-password" type="password" Class="form-control" @bind-Value="_registerModel.ConfirmPassword" />
                    <ValidationMessage For="@(() => _registerModel.ConfirmPassword)" />
                </div>
            </div>
            <hr class="my-4">
            <div class="row">
                <div class="col-3">
                    <button class="btn btn-primary" type="submit">Register</button>
                </div>
              </div>
        </EditForm>
    </div>
    </div>
</div>
