@page "/change-password"

 <div class="row justify-content-md-center">
    <div class="col-md-7 col-sm-12">
    <h3>Set new password</h3>
        <div class="col">
            <EditForm Model="_passwordModel" OnValidSubmit="Change" class="card card-body bg-light">
                <DataAnnotationsValidator />           
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="password" class="form-label">Old Password</label>
                        <InputText id="password" type="password" class="form-control" @bind-Value="_passwordModel.OldPassword" />
                        <ValidationMessage For="@(() => _passwordModel.OldPassword)" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="password" class="form-label">New Password</label>
                        <InputText id="password" type="password" class="form-control" @bind-Value="_passwordModel.NewPassword" />
                        <ValidationMessage For="@(() => _passwordModel.NewPassword)" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="conf-password" class="form-label">New Confirm Password</label>
                        <InputText id="conf-password" type="password" class="form-control" @bind-Value="_passwordModel.NewConfirmPassword" />
                        <ValidationMessage For="@(() => _passwordModel.NewConfirmPassword)" />
                    </div>
                </div>
                <div class="row">
                    <div>
                        <button class="btn btn-primary" type="submit">Change password</button>
                    </div>
                  </div>
            </EditForm>
        </div>
    </div>
</div>  
