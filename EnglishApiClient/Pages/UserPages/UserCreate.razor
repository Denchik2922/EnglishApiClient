@page "/create-user"
@using EnglishApiClient.Components
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "SuperAdmin")]

@if (_roles==null)
{
    <LoadingIndicator/>
}
else
{
 <div class="row justify-content-md-center">
    <div class="col-md-7 col-sm-12">
    <h3>Create User</h3>
        <div class="col">
            <EditForm Model="_user" OnValidSubmit="AddUser" class="card card-body bg-light">
                <DataAnnotationsValidator />
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="name" class="form-label">User Name</label>
                        <InputText id="name" class="form-control" @bind-Value="_user.UserName" />
                        <ValidationMessage For="@(() => _user.UserName)" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="email" class="form-label">Email</label>
                        <InputText id="email" type="email" class="form-control" @bind-Value="_user.Email" />
                        <ValidationMessage For="@(() => _user.Email)" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="discription" class="form-label">Roles</label>
                        <div>
                            @foreach (var role in _roles)
                            {
                                <input type="checkbox" id="@role.Name" name="role" @onchange="() => SetOrRemoveRole(role.Name)">
                                <label for="@role.Name">@role.Name</label><br>
                            }
                        </div>
                        <ValidationMessage For="@(() => _user.Roles)" />
                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="password" class="form-label">Password</label>
                        <InputText id="password" type="password" class="form-control" @bind-Value="_user.Password" />
                        <ValidationMessage For="@(() => _user.Password)" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="conf-password" class="form-label">Confirm Password</label>
                        <InputText id="conf-password" type="password" class="form-control" @bind-Value="_user.ConfirmPassword" />
                        <ValidationMessage For="@(() => _user.ConfirmPassword)" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <button class="btn btn-primary" type="submit">Add</button>
                    </div>
                  </div>
            </EditForm>
        </div>
    </div>
</div>   
}