@page "/edit-tag/{TagId:int}"
@using EnglishApiClient.Components
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

@if (_tag==null)
{
    <LoadingIndicator/>
}
else
{
    <div class="row justify-content-md-center">
    <div class="col-md-7 col-sm-12">
   <h3>Edit Tag</h3>
        <div class="col">
            <EditForm Model="_tag" OnValidSubmit="TagUpdate" class="card card-body bg-light">
                <DataAnnotationsValidator />
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="name" class="form-label">Name</label>
                        <InputText id="name" class="form-control" @bind-Value="_tag.Name" />
                        <ValidationMessage For="@(() => _tag.Name)" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="discription" class="form-label">Discription</label>
                        <InputText Id="discription" Class="form-control" @bind-Value="_tag.Description" />
                        <ValidationMessage For="@(() => _tag.Description)" />
                    </div>
                </div>
                <hr class="my-4">
                    <div class="tag-func">
                        <div class="func-block">
                            <div>
                                <button class="btn btn-primary" type="submit">Edit</button>
                            </div>
                            <div>
                                <p>
                                    <button type="button" @onclick="DeleteTag" class="btn btn-danger">Delete</button>
                                </p>
                   
                            </div>
                        </div>
                    </div>
            </EditForm>
        </div>
    </div>
</div>
    
}
