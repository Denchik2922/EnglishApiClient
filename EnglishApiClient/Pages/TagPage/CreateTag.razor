@page "/create-tag"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

<div class="row justify-content-md-center">
    <div class="col-md-7 col-sm-12">
   <h3>Create Tag</h3>

    @if (_tag==null)
    {
            <span><em>Loading...</em></span>
    }
    else
    {
        <div class="col">
            <EditForm Model="_tag" OnValidSubmit="AddTag" class="card card-body bg-light">
                <DataAnnotationsValidator />
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="name" class="form-label">Name</label>
                        <InputText id="name" class="form-control" @bind-Value="_tag.Name" />
                        <ValidationMessage For="@(() => _tag.Name)" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label for="discription" class="form-label">Discription</label>
                        <InputText Id="discription" Class="form-control" @bind-Value="_tag.Description" />
                        <ValidationMessage For="@(() => _tag.Description)" />
                    </div>
                </div>
                <hr class="my-4">
                <div class="row">
                    <div class="col-3">
                        <button class="btn btn-primary" type="submit">Add</button>
                    </div>
                  </div>
            </EditForm>
        </div>
    }
    </div>
</div>
