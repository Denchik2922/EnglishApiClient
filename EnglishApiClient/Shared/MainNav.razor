@using Microsoft.AspNetCore.Components.Authorization

<nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <NavLink class="nav-link" href="dictionaries" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Dictionaries
                </NavLink>
            </li>
            <li class="nav-item">
               <NavLink class="nav-link" href="words">
                    <span class="oi oi-home" aria-hidden="true"></span> My Dictionaries
                </NavLink>
            </li>
          </ul>
        </div>
            <div class="d-flex">
            <AuthorizeView>
                <Authorized>
                    <div class="username">
                        @context.User.Identity.Name
                    </div>
                    <NavLink class="btn btn-sm btn-info" @onclick="() => LogoutUser()">Log out</NavLink>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="btn btn-sm btn-info" href="login">Log in</NavLink>
                </NotAuthorized>
            </AuthorizeView>
          </div>
      </div>
</nav>
