@using Microsoft.AspNetCore.Components.Authorization

<nav class="navbar navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="/">English API</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
      <div class="offcanvas-header">
          <div>
            <AuthorizeView>
                <Authorized>
                    <p>@context.User.Identity.Name</p>
                    <p @onclick="@(() => NavigationManager.NavigateTo("change-password"))"><span class="oi oi-pencil"></span> Change Password </p>
                    <p @onclick="() => LogoutUser()"><span class="oi oi-account-logout"></span> Log out</p>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="btn btn-sm btn-info" href="login">Log in</NavLink>
                </NotAuthorized>
            </AuthorizeView>
          </div>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Dictionaries
                </NavLink>
            </li>
            <li class="nav-item">
               <NavLink class="nav-link" href="my-dictionaries">
                    <span class="oi oi-book"></span> My Dictionaries
                </NavLink>
            </li>
            <AuthorizeView Roles="Admin">
                <Authorized>
                  <li class="nav-item">
                       <NavLink class="nav-link" href="tags">
                            <span class="oi oi-tags"></span> Tags
                        </NavLink>
                  </li>
                  <li class="nav-item">
                       <NavLink class="nav-link" href="testing-type">
                            <span class="oi oi-tags"></span> Testing-type
                        </NavLink>
                  </li>
                  <li class="nav-item">
                       <NavLink class="nav-link" href="users">
                            <span class="oi oi-person"></span> Users
                        </NavLink>
                  </li>
                  
                </Authorized>
            </AuthorizeView>
          </ul>
      </div>
    </div>
  </div>
</nav>


