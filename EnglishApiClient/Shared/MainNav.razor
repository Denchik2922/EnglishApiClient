@using Microsoft.AspNetCore.Components.Authorization

<nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
          <a class="navbar-brand" href="#"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Dictionaries
                </NavLink>
            </li>
            <li class="nav-item">
               <NavLink class="nav-link" href="my-dictionaries">
                    <span class="oi oi-book"></span> My Dictionaries
                </NavLink>
            </li>
            <AuthorizeView Roles="Admin">
                <Authorized>
                  <li class="nav-item">
                       <NavLink class="nav-link" href="tags">
                            <span class="oi oi-tags"></span> Tags
                        </NavLink>
                  </li>
                  <li class="nav-item">
                       <NavLink class="nav-link" href="testing-type">
                            <span class="oi oi-tags"></span> Testing-type
                        </NavLink>
                  </li>
                  <li class="nav-item">
                       <NavLink class="nav-link" href="users">
                            <span class="oi oi-person"></span> Users
                        </NavLink>
                  </li>
                  
                </Authorized>
            </AuthorizeView>
          </ul>
            <div class="d-flex">
            <AuthorizeView>
                <Authorized>
                    <div class="username">
                        @context.User.Identity.Name
                    </div>
                    <NavLink class="btn btn-sm btn-info" @onclick="() => LogoutUser()">Log out</NavLink>
                </Authorized>
                <NotAuthorized>
                    <NavLink class="btn btn-sm btn-info" href="login">Log in</NavLink>
                </NotAuthorized>
            </AuthorizeView>
          </div>
      </div>
     </div>
</nav>



